{
  "extends": "commercetools",
  "env": {
    "es6": true,
    "node": true
  },
  "plugins": [
    "no-only-tests"
  ],
  "rules": {
    "no-only-tests/no-only-tests": 2,
    "class-methods-use-this": 0,
    "no-return-assign": 0,
    "no-plusplus": 0,
    "no-param-reassign": 0,
    "quotes": [
      "error", "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "comma-dangle": ["error", {
      "arrays": "never",
      "objects": "only-multiline",
      "imports": "never",
      "exports": "never",
      "functions": "ignore"
    }],
    "import/no-extraneous-dependencies": ["off", {"devDependencies": ["spec"]}],
    "no-restricted-syntax": ["error", "WithStatement"],
    "no-await-in-loop": 0,
    "max-len": ["error", 140]
  }
}
