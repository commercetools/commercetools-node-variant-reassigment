{
  "extends": "commercetools",
  "env": {
    "es6": true,
    "jest": true,
    "node": true
  },
  "rules": {
    "class-methods-use-this": 0,
    "no-return-assign": 0,
    "no-plusplus": 0,
    "no-param-reassign": 0,
    "quotes": [
      "error", "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "comma-dangle": ["error", {
      "arrays": "never",
      "objects": "only-multiline",
      "imports": "never",
      "exports": "never",
      "functions": "ignore"
    }],
    "no-restricted-syntax": ["error", "WithStatement"]
  }
}